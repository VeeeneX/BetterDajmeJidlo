generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  address       String
  manager       String
  minimumPrice  Int
  deliveryPrice Int
  deliveryTime  String

  menu Food[]

  @@unique([name, address])
}

model Food {
  id           String      @id @default(uuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  name         String
  basePrice    Float
  ingredients  String[]

  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId String?

  @@unique([restaurantId, name])
}
